<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Movie Script Creator
			{% endblock %}
		</title>
		{# Add your stylesheets and other common head elements here #}
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
			<link href="{{ asset('css/style.css ') }}" rel="stylesheet"/>
		{% endblock %}
		{% block javascripts %}
			<script src="{{ asset('js/script.js ') }}"></script>
			<!-- Add these script tags before the closing </body> tag -->
			<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

		{% endblock %}
	</head>
	<body>
		<header>
			{# Add navigation, user dropdown, etc. #}
		</header>
		<main class="content">
			{% block page_content %}
				{% block body %}{% endblock %}
			{% endblock %}
		</main>
		<footer>
			{# Add footer content if needed #}
		</footer>
	</body>
</html>

<!-- script to handle the button click -->

<script>
	document.addEventListener('DOMContentLoaded', function () {
var loginButton = document.getElementById('in');
var loginModal = new bootstrap.Modal(document.getElementById('loginModal'));

loginButton.addEventListener('click', function () {
console.log('Login button clicked');
loginModal.show();
});

// Add event listener for modal close
loginModal._element.addEventListener('hidden.bs.modal', function () {
console.log('Modal hidden');
// Redirect to the welcome page
window.location.href = '{{ path('welcome') }}'; // Update with your route name
});
});
</script>
